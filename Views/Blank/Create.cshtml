@model Blank;


@{
    ViewData["Title"] = "Add a Question";
}

<h1>Create a Fill in the Blank</h1>
<form method="post">
    <div>

        <textarea class="form-control"
                  
                  placeholder="Provide a Question statement" asp-for="Statement"></textarea>
        <label>Answer</label>

        <input class="form-control"
               asp-for="Answer" placeholder="Provide an Answer" id="answer" type="text"  />
        <label>Synonyms (If Applicable)</label>
        <input class="form-control"
               asp-for="Synonym1" placeholder="Synonym 1" id="option1" />

        <input class="form-control"
               asp-for="Synonym2" placeholder="Synonym 2" id="option2" /> <input class="form-control"
                                                                               asp-for="Synonym3" placeholder="Synonym 3" id="option3" id="option3" />

        
        <div class="center-block" style="display : flex; flex-direction : column">
            <h3>Please select a subject</h3>
            <label for="English">English</label>
            <input type="radio" value="English" class="form-check-input" name="subject" asp-for="Subject" id="English" />
            <label for="Chemistry">Chemistry</label>
            <input type="radio" value="Chemistry" class="form-check-input" name="subject" asp-for="Subject" id="Chemistry" />
            <label for="Maths">Maths</label>
            <input type="radio" value="Maths" class="form-check-input" name="subject" asp-for="Subject" id="Maths" />
            <label for="Physics">Physics</label>
            <input type="radio" value="Physics" class="form-check-input" name="subject" asp-for="Subject" id="Physics" />
        </div>
        <div class="center-block" style="display : flex; flex-direction : column">
            <h3>Please select a difficulty level for this answer</h3>
            <label for="Easy">Easy</label>
            <input type="radio" value="Easy" class="form-check-input" name="difficulty" asp-for="Difficulty" id="Easy" />
            <label for="Medium">Medium</label>
            <input type="radio" value="Medium" class="form-check-input" name="difficulty" asp-for="Difficulty" id="Medium" />
            <label for="Hard">Hard</label>
            <input type="radio" value="Hard" class="form-check-input" name="difficulty" asp-for="Difficulty" id="Hard" />
        </div>

        <button class=" btn btn-dark" style="margin-top:10px">Create</button>


    </div>

</form>


<div style="display : flex; flex-direction : column">
    <span asp-validation-for="Statement" class="text-danger"></span>
    <span asp-validation-for="Answer" class="text-danger"></span>
    <span asp-validation-for="Synonym1" class="text-danger"></span>
    <span asp-validation-for="Synonym2" class="text-danger"></span>
    <span asp-validation-for="Synonym3" class="text-danger"></span>
</div>

<script src="https://cdn.tiny.cloud/1/ity2yj9qnyexhb9d3n2so42uklxs5mo5n84povwn2rrfueya/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

