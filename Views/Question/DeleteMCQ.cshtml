@model Question; 
@{

    ViewData["Title"] = "Update";
}

<h1>Delete MCQ</h1>

<form method="post" asp-action="DeleteMCQ">
    <div>
        <label>Statement</label>

        <textarea class="form-control"
                  asp-for="Content"
                  placeholder="Provide a Question statement" readonly></textarea>
        <label>Answer</label>

        <input class="form-control"
               asp-for="Answer" placeholder="Provide an Answer" id="answer" type="text" readonly value="" />
        <label>Options</label>
        <textarea class="form-control"
                  asp-for="Option1" placeholder="Option 1" id="option1" disabled></textarea>

        <textarea class="form-control"
                  asp-for="Option2" placeholder="Option 2" id="option2" disabled></textarea> <textarea class="form-control"
                                                                                              asp-for="Option3" placeholder="Option 3" id="option3" id="option3" disabled></textarea>

        <div class="center-block" style="display : flex; flex-direction : column">
            <h3>Please select an option as an answer</h3>
            <label for="radioOption1">Option 1</label>
            <input type="radio" class="form-check-input" disabled value="Option1" asp-for= "Answer" name="Answer" id="radioOption1" />
            <label for="radioOption2">Option 2</label>
            <input type="radio" class="form-check-input" disabled value="Option2" asp-for="Answer" name="Answer" id="radioOption2" />
            <label for="radioOption3">Option 3</label>
            <input type="radio" class="form-check-input" disabled value="Option3" asp-for="Answer" name="Answer" id="radioOption3" />

        </div>
        <div class="center-block" style="display : flex; flex-direction : column">
            <h3>Please select a subject</h3>
            <label for="English">English</label>
            <input type="radio" value="English" class="form-check-input" name="subject" asp-for="Subject" id="English" disabled />
            <label for="Chemistry">Chemistry</label>
            <input type="radio" value="Chemistry" class="form-check-input" name="subject" asp-for="Subject" id="Chemistry" disabled />
            <label for="Maths">Maths</label>
            <input type="radio" value="Maths" class="form-check-input" name="subject" asp-for="Subject" id="Maths" disabled />
            <label for="Physics">Physics</label>
            <input type="radio" value="Physics" class="form-check-input" name="subject" asp-for="Subject" id="Physics" disabled />
        </div>
        <div class="center-block" style="display : flex; flex-direction : column">
            <h3>Please select a difficulty level for this answer</h3>
            <label for="Easy">Easy</label>
            <input type="radio" value="Easy" class="form-check-input" name="difficulty" asp-for="Difficulty" id="Easy" disabled />
            <label for="Medium">Medium</label>
            <input type="radio" value="Medium" class="form-check-input" name="difficulty" asp-for="Difficulty" id="Medium" disabled />
            <label for="Hard">Hard</label>
            <input type="radio" value="Hard" class="form-check-input" name="difficulty" asp-for="Difficulty" id="Hard" disabled />
        </div>

        <button class=" btn btn-dark" style="margin-top:10px" >Delete</button>


    </div>

</form>


<div style="display : flex; flex-direction : column">
    <span asp-validation-for="Content" class="text-danger"></span>
    <span asp-validation-for="Answer" class="text-danger"></span>
    <span asp-validation-for="Option1" class="text-danger"></span>
    <span asp-validation-for="Option2" class="text-danger"></span>
    <span asp-validation-for="Option3" class="text-danger"></span>
</div>
<script>
    var option1Field = document.getElementById("option1");
    var option2Field = document.getElementById("option2");
    var option3Field = document.getElementById("option3");
    var answerField = document.getElementById("answer");
    var radioOption1 = document.getElementById("radioOption1");
    var radioOption2 = document.getElementById("radioOption2");
    var radioOption3 = document.getElementById("radioOption3");

    radioOption1.addEventListener("click", function () {
        answerField.value = option1Field.value;
    });

    radioOption2.addEventListener("click", function () {
        answerField.value = option2Field.value;
    });

    radioOption3.addEventListener("click", function () {
        answerField.value = option3Field.value;
    });
</script>
